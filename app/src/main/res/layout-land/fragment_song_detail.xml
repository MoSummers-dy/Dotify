<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/overall_padding"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/ivAlbumCover"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mingyuetianya_cover"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvSongName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/album_cover" />

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/tvSinger"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/singer_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/darkBlue"
        app:layout_constraintLeft_toLeftOf="@id/tvSongName"
        app:layout_constraintRight_toRightOf="@id/tvSongName"
        app:layout_constraintBottom_toTopOf="@id/tvPlaysNum"
        app:layout_constraintTop_toBottomOf="@id/tvSongName" />

    <TextView
        android:id="@+id/tvPlaysNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="@string/number_plays"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/darkPurple"
        app:layout_constraintLeft_toLeftOf="@id/tvSinger"
        app:layout_constraintRight_toRightOf="@id/tvSinger"
        app:layout_constraintTop_toBottomOf="@id/tvSinger"
        app:layout_constraintBottom_toTopOf="@id/btnPlay"/>

    <ImageButton
        android:id="@+id/btnPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/skip_to_previous"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/ic_previous"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toLeftOf="@id/btnPlay"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/play"
        android:layout_marginTop="@dimen/default_margin"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnPrevious"
        app:layout_constraintRight_toLeftOf="@id/btnNext"
        app:layout_constraintTop_toBottomOf="@id/tvPlaysNum" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/skip_to_next"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintLeft_toRightOf="@id/btnPlay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnPlay" />


</androidx.constraintlayout.widget.ConstraintLayout>