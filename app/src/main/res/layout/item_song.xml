<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/overall_padding"
    android:foreground="?selectableItemBackground"
    >

    <ImageView
        android:id="@+id/ivSongImage"
        android:layout_width="@dimen/default_height_width"
        android:layout_height="@dimen/default_height_width"
        android:src="@drawable/unknown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/ivSong_description" />

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Song name"
        app:layout_constraintLeft_toRightOf="@id/ivSongImage"
        app:layout_constraintTop_toTopOf="@id/ivSongImage"
        app:layout_constraintBottom_toBottomOf="@id/ivSongImage"
        android:layout_marginStart="@dimen/default_margin"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/large_text"/>

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Artist name"
        app:layout_constraintLeft_toLeftOf="@id/tvSongName"
        app:layout_constraintTop_toBottomOf="@id/tvSongName"
        android:maxLines="1"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>